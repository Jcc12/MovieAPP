<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sourcey.materiallogindemo.Movie_Info">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                >


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="12.7dp"
                    android:src="@drawable/movie4"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar"
                    />
                <TextView
                    android:id="@+id/profile_name_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Movie4"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/profile_image_3"
                    app:layout_constraintTop_toBottomOf="@+id/profile_image_3"
                    />
                <TextView
                    android:id="@+id/about_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="@string/about_me4"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="12.7dp"
                    app:layout_constraintLeft_toLeftOf="@+id/profile_name_3"
                    app:layout_constraintRight_toRightOf="@+id/price_movie_3"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name_3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="0.384"
                    app:layout_constraintLeft_toLeftOf="@+id/price_movie_3"
                    app:layout_constraintRight_toRightOf="@+id/price_movie_3"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                <TextView
                    android:id="@+id/price_movie_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12.7dp"
                    android:text="35 yuan  "
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/following_count" />

                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Time Duration"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toLeftOf="@+id/price_movie_3"
                    app:layout_constraintRight_toRightOf="@+id/time_movie_3"
                    app:layout_constraintTop_toBottomOf="@+id/toolbar" />

                <TextView
                    android:id="@+id/time_movie_3"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginRight="10dp"
                    android:text="120min"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    app:layout_constraintRight_toLeftOf="@+id/price_movie_3"
                    app:layout_constraintTop_toBottomOf="@+id/following_count" />


            </android.support.constraint.ConstraintLayout>
            <android.support.v7.widget.CardView
                android:layout_margin="8.0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/header_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="User Review"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        />
                    <TextView
                        android:id="@+id/details_text_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/details_content4"
                        app:layout_constraintTop_toBottomOf="@+id/header_text"
                        />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
